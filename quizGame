questions = ['Should you exercise?', 'Should you eat fruit?', 'Should you watch TV?']
answers = ['yes', 'yes', 'no']

def quizgame():
    score = 0
    total_questions = len(questions)
    for i in range(len(questions)):
        print(questions[i])
        ans = input('Please answer: ')
        if ans == answers[i]:
            print('Correct!')
            score = score + 1
        else:
            print('Incorrect!')
    print(f'Final score is {score} out of {total_questions}')

quizgame()
